#File makemcr creates the scanner for micro
#-----------------------------------------------------------
OBJ	=	mcr.o mcrlex.o
#-----------------------------------------------------------
#-----------------------------------------------------------
mcr:		${OBJ}
		g++ -o mcr ${OBJ} -lm
#-----------------------------------------------------------
#----------------------------------------------------------
mcr.o:		mcr.cpp 
		g++ -c -g mcr.cpp
#-----------------------------------------------------------
#-----------------------------------------------------------
mcrlex.o:	mcrlex.cpp mcrlex.h
		g++ -c -g mcrlex.cpp
#-----------------------------------------------------------
#-----------------------------------------------------------
